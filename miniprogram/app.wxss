/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
@keyframes fadeIn {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}

@keyframes shake {
  0% {
    transform: rotateZ(0)
  }
  25% {
    transform: rotateZ(15deg)
  }
  75% {
    transform: rotateZ(-15deg)
  }
  100% {
    transform: rotateZ(0)
  }
}